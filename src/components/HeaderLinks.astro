<style>
	.header-links {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		margin-left: 1rem;
	}

	.header-link {
		display: inline-flex;
		align-items: center;
		gap: 0.375rem;
		padding: 0.375rem 0.75rem;
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--sl-color-text);
		text-decoration: none;
		border-radius: 0.375rem;
		transition: background-color 0.15s, color 0.15s;
	}

	.header-link:hover {
		color: var(--sl-color-text-accent);
		background-color: var(--sl-color-gray-6, rgba(0, 0, 0, 0.05));
		text-decoration: none;
	}

	:global([data-theme='dark']) .header-link:hover {
		background-color: var(--sl-color-gray-5, rgba(255, 255, 255, 0.1));
	}

	.header-link svg {
		flex-shrink: 0;
	}

	.header-link span {
		white-space: nowrap;
	}

	/* Hide text on smaller screens */
	@media (max-width: 640px) {
		.header-link span {
			display: none;
		}
		.header-link {
			padding: 0.375rem;
		}
	}
</style>
